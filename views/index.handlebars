<div id="top-container" class="container-fluid">
  <h1 id="main-title" class="text-center">
    Encontre o emprego dos seus sonhos
  </h1>
  <p id="main-subtitle" class="text-center">
    Somos o site com mais vagas de tecnologia no mercado, direcionadas a
    home office
  </p>
  <form action="" id="search-form" class="form-inline col-lg-10 mx-md-auto px-lg-5">
    <div class="form-group col-md-10">
      <input type="text" class="form-control" name="job" id="job" placeholder="Digite a vaga que esta buscando" />
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Procurar</button>
    </div>
  </form>
</div>
<main>
  <div id="jobs-container" class="container px-4 px-lg-5 col-md-10">
    <div class="row">
      <div class="col-md-12">
        <h2 id="job-list-title" class="text-center">Veja nossas vagas em destaque</h2>
        <ul id="job-list" class="list-group">
          {{#each jobs}}
          <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
            <img src="/images/company.svg" alt="Company" />
            <p>{{dataValues.company}}</p>
            <h2>{{dataValues.title}}</h2>
            <p>R$ {{dataValues.salary}}</p>
            <span class="new-job-label">Nova</span><a href="#" class="btn btn-primary">Ver vaga</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>